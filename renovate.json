{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "github>rdartus/home-ops//.renovate/packageRules.json"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "ignorePaths": [
    "**/.vscode/**",
    "kubernetes/gotk-components*.ya?ml"
  ],
  "enabledManagers": [
    "flux",
    "kubernetes",
    "helm-values",
    "dockerfile"
  ],
  "flux": {
    "managerFilePatterns": [
      "(^|/)kubernetes(?:/.+)?/ks\\.ya?ml$",
      "(^|/)kubernetes(?:/.+)?/helmrelease\\.ya?ml$",
      "(^|/)kubernetes(?:/.+)?/(flux-?kustomization|ks|helmrelease)\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "(^|/)kubernetes(?:/.+)?/kustomization\\.ya?ml$",
      "(^|/)kubernetes(?:/.+)?/(overlays|bases)/.+/kustomization\\.ya?ml$"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "(^|/)kubernetes(?:/.+)?/(helm-values|values)\\.ya?ml$",
      "(^|/)kubernetes(?:/.+)?/(values\\.[a-zA-Z0-9_-]+|.*-values)\\.ya?ml$"
    ]
  }
}